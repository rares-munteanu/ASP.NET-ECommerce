@model IEnumerable<WeShop.Models.Order>
@using System.Activities.Expressions
@using Microsoft.AspNet.Identity
@using WeShop.Models
@{
    ViewBag.Title = "Index";
}

<h2 class="mt-3 mb-3 ml-3">Your orders</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new {@class = "btn btn-primary ml-3"})
</p>
<table id="orders" class="table table-bordered table-hover">

    <thead>
    <tr>
        <th class="text-center">
            Products
        </th>

        <th class="text-center">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.PaymentType.Name)
        </th>
        <th>

        </th>
    </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.ActionLink("See products","OrderItems","Orders",new {orderId = item.Id}, new {@class="btn btn-primary"})
            </td>

            <td class="text-center">
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>

            <td class="text-center">
                @Html.DisplayFor(modelItem => item.PaymentType.Name)
            </td>
                
           
            <td class="text-center">
                @if (item.OrderStatus == OrderStatus.NewOrder)
                {
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id},new {@class= "btn btn-primary"})
                }
            </td>

            @*<td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>*@
        </tr>
    }
    </tbody>


</table>


@section scripts
{
    <script>
        $(document).ready(function() {

            $("#orders").DataTable({
                pageLength: 5,
                lengthMenu: [5, 10, 20],
                columnDefs: [
                    {
                        targets: [0, 1, 2, 3],
                        className: "text-center"
                    },
                    {
                        orderable: false,
                        targets: [-1]
                    }
                ],
            });

        });
    </script>

}