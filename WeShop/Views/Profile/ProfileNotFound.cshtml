@model WeShop.ViewModels.ProfileFormViewModel

@{
    ViewBag.Title = "ProfileNotFound";
}

<h2 class="py-2 shadow-lg p-3 mb-2 bg-white rounded text-center mt-4 ">You don't have a profile. Please configure one.</h2>

<div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form-group p-4">

    @using (Html.BeginForm("Create", "Profile", FormMethod.Post, new {@class = "px-2 justify-content-center", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <hr/>
        @Html.ValidationSummary("", new {@class = "text-danger px-2 mr-5"})
        <div class="form-group">
            @Html.LabelFor(p => p.FirstName, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.FirstName, new {@class = "form-control ml-5", placeholder = "Enter email"})
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.LastName, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.LastName, new {@class = "form-control  ml-5", placeholder = "Enter a new password"})

        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Birthdate, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Birthdate, new {@class = "form-control  ml-5", placeholder = "Confirm"})
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Phone, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Phone, new {@class = "form-control  ml-5", placeholder = "Confirm"})
        </div>

        <hr/>
        <h3>Address</h3>

        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Create"/>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}