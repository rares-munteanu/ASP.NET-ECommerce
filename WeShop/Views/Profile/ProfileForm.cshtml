@model WeShop.ViewModels.ProfileFormViewModel
@{
    ViewBag.Title = "ProfileForm";
}


<h2 class="py-2 shadow-lg p-3 mb-2 bg-white rounded text-center mt-4 ">@Model.Title</h2>


<div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form-group p-4">

    @using (Html.BeginForm("Save", "Profile", FormMethod.Post, new {@class = "px-2 justify-content-center", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <hr/>
        @Html.ValidationSummary("", new {@class = "text-danger px-2 mr-5"})
        @*@Html.ValidationSummary(true, "Please fix the following errors.", new {@class = ""})*@
        <div class="form-group">
            @Html.LabelFor(p => p.FirstName, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.FirstName, new {@class = "form-control ml-5", placeholder = "Enter email"})
            @*@Html.ValidationMessageFor(p => p.FirstName, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.LastName, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.LastName, new {@class = "form-control  ml-5", placeholder = "Enter a new password"})
            @*@Html.ValidationMessageFor(p => p.LastName, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Birthdate, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Birthdate, "{0:d MMM yyyy}", new {@class = "form-control  ml-5", placeholder = "Enter the real date of birth"})
            @*@Html.ValidationMessageFor(p => p.Birthdate, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Phone, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Phone, new {@class = "form-control  ml-5", placeholder = "Enter mobile phone"})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <hr/>
        <h3 class="mr-5">Address</h3>

        <div class="form-group">
            @Html.LabelFor(p => p.County, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.County, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.City, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.City, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.StreetName, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.StreetName, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.StreetNumber, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.StreetNumber, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Building, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Building, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Staircase, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.Staircase, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.ApartmentNr, new {@class = "mr-5"})
            @Html.TextBoxFor(p => p.ApartmentNr, new {@class = "form-control  ml-5", placeholder = ""})
            @*@Html.ValidationMessageFor(p => p.Phone, "", new {@class = "text-danger px-2 mr-5"})*@
        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-info mr-5" value="Save"/>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}