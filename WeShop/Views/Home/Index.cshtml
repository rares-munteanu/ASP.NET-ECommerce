@using WeShop.Models
@{
    ViewBag.Title = "Home Page";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">

        <div class="mb-5 mt-5">
            <img src="../../images/logo.png" alt=""/>
        </div>

    </div>
</div>


<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="jumbotron d-block">
            <h2 class="mb-5">A few clicks is all it takes.</h2>
            @*<h2 class="mb-5">“Modern Basics. Radical Transparency.”</h2>*@
            <div class="text-center">
                <h3 class="mb-5">Buy. Think. Grow.</h3>
            </div>
            <p class="lead text-center"></p>
            @if (this.User.IsInRole(RoleName.CanManageProducts))
            {
                <div class="text-center ">
                    <a href="/products/index" class="btn btn-primary btn-lg">Manage products &raquo;</a>
                    @*@Html.ActionLink("Manage products", "Index", "Products", "", new { @class = "btn btn-primary btn-lg" })*@
                </div>
            }
            else if(Request.IsAuthenticated)
            {
                <div class="text-center ">
                    <a href="/products/index" class="btn btn-primary btn-lg">Start buying &raquo;</a>
                    @*@Html.ActionLink("Start buying @&raquo;", "Index", "Products", "", new {@class = "btn btn-primary btn-lg" })*@
                </div>
            }
            else
            {
                <div class="text-center ">
                    <a href="/Account/Login?ReturnUrl=%2FHome%2Findex" class="btn btn-primary btn-lg">Start buying &raquo;</a>
                    @*@Html.ActionLink("Start buying @&raquo;", "Index", "Products", "", new {@class = "btn btn-primary btn-lg" })*@
                </div>

            }

        
        </div>
    </div>

</div>

